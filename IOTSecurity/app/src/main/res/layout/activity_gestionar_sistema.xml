<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".GestionarSistema">


    <RelativeLayout
        android:id="@+id/idLayoutFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="-40dp"
        android:background="@drawable/banner_redondo">


    </RelativeLayout>



    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"

        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/textNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Gestionar Sistema"
        android:textAlignment="center"
        android:textColor="@color/login_form_details"
        android:fontFamily="@font/bunglerlight"
        android:textSize="55sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="475dp"
        android:layout_below="@+id/idLayoutFondo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"

        android:layout_marginEnd="22dp"
        android:layout_marginBottom="-2dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Estado del Sistema"
            android:fontFamily="@font/bunglerlight"
            android:textSize="45dp"
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:alpha="0.85"
            android:src="@mipmap/gestionarsistema" />

        <TextView
            android:id="@+id/txtMen3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text=" "
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/btn_bg"
            android:textOff=" "
            />


    </LinearLayout>


</RelativeLayout>