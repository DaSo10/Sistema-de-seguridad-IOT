<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".AgregarUsuario2">


    <RelativeLayout
        android:id="@+id/idLayoutFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="-40dp"
        android:background="@drawable/banner_redondo">


    </RelativeLayout>

    <TextView
        android:id="@+id/txtNombreRecep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:textColor="@color/login_form_details"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/textNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Gestionar Puerta"
        android:textAlignment="center"
        android:textColor="@color/login_form_details"
        android:fontFamily="@font/bunglerlight"
        android:textSize="50sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="475dp"
        android:layout_below="@+id/idLayoutFondo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"

        android:layout_marginEnd="22dp"
        android:layout_marginBottom="-2dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Autorizacion"
            android:fontFamily="@font/bunglerlight"
            android:textSize="40dp"
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/autorizacionpuerta" />

        <TextView
            android:id="@+id/txtMen1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text=" "
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/btn_bg"
            android:textOff=" "
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Puerta"
            android:fontFamily="@font/bunglerlight"
            android:textSize="40dp"
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/abrirpuerta" />
        <TextView
            android:id="@+id/txtMen2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text=" "
            android:textSize="15dp"
            android:textColor="@color/login_form_details"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:textOff=" "
            />
    </LinearLayout>


</RelativeLayout>